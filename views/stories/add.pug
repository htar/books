-var title = 'Add stories'
include ../template/head.pug
body
  include ../template/navbar.pug
  main
    .container
      h1 Add Story
      .row
        form.col.s12(action='/stories', method='post')
          .row
            .input-field
              input(type='text', name='title')
              label(for='title') Title
          .row
            .input-field
              select(name='status')
                option(value='public', selected) Public
                option(value='private') Private
                option(value='unpublished') Unpublished
              label(for='status') Status
          .row
            p
              input#filled-in-box.filled-in(type='checkbox', name='allowComments', checked='checked')
              label(for='filled-in-box') Allow Comments
          .row
            .input-field
              h5 Tell Us Your Story:
              textarea(name='body')
          input.btn(type='submit', value='Save')


include ../template/footer.pug
include ../template/scripts.pug